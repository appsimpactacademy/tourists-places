<div class="col-lg-12">
  <%= link_to "Add new place", new_place_path, class: "btn btn-outline-primary mt-3" %>
  <% @places.each do |place| %>
  <div class="card mt-3 mb-3" style="max-width: 740px;">
    <div class="row g-0">
      <div class="col-md-4">
        <% if place.images.attached? %>
          <%= image_tag url_for(place.images.first), class: "img-fluid rounded-start", style: "height: 100%;" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <%= link_to place_path(place), style: "text-decoration:none;" do %>
          <h4 class="card-title fw-bold"><%= place.name %></h4>
          <% end %>   
          <p class="lead card-text"><%= truncate(strip_tags(place.description), length: 120) %></p>
          <p class="card-text"><%#= place.city %></p>
          <p class="card-text"><%#= place.state %></p>
          <p class="card-text"><small class="text-muted">Posted on <%= time_ago_in_words(place.created_at) %> ago</small></p>
          <%= link_to "Edit Place", edit_place_path(place), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>