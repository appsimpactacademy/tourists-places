<div class="col-lg-12">
  <%= form_with model: accommodation do |form| %>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :contact_number %>
          <%= form.text_field :contact_number, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :state %>
          <%= form.text_field :state, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :latitude %>
          <%= form.text_field :latitude, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :longitude %>
          <%= form.text_field :longitude, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control mt-2 mb-2" %>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :place_name %>
          <%= form.select(:place_id, options_for_select(Place.distinct.pluck(:city, :id)), { prompt: 'Select Place City' }, class: 'form-select mt-2 mb-2') %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :price %>
          <%= form.text_field :price, class: 'form-control mt-2 mb-2' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true, class: "form-control mt-2 mb-2" %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary mt-2' %>
      <%= link_to "Back", accommodations_path, class: "btn btn-warning mt-2" %>
    </div>
  <% end %>
</div>