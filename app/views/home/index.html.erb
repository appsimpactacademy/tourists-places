<div class="col-lg-10 mx-auto">
  <% @places.each do |place| %>
    <div class="card mt-4">
      <div class="row">
        <div class="col-lg-4">
          <%= image_tag place.image_url, class: "img-fluid" %>
        </div>
        <div class="col-lg-8">
          <h3 class="mt-3"><%= place.place_title %></h3>
          <%= link_to "View Place", place_path(place), class: "btn btn-outline-primary mb-2 mx-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
